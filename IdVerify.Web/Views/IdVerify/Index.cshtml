@model IdVerify.Web.Models.IDNumber

@{
    ViewBag.Title = "Verify ID Number";
}
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Welcome to South african Identification Registration and Validator</h1>
            </hgroup>
        </div>
    </section>
    <div class="container-fluid">
        <div class="row-fluid">
        </div>
        <div class="row-fluid">
            <div class="span12">
