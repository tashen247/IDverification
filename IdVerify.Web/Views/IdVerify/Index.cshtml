                    <fieldset>
                        <table>
                            <tr>
                                <td>
                                    @Html.Label("IDnumber")
                                </td>
                                <td>
                                    @Html.TextBoxFor(Model => Model.IDnumber)
                                </td>
                            </tr>

                                <td></td>
                                <td>
                                    <div class="form-actions">&nbsp;
                                        <input type="button" value="Validate" onclick="ValidateId(); return false;" />       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input type="button" value="Generate ID No" onclick="    GenerateNewId(); return false;" />   
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <section>
        <div id="contactsGrid"></div>
    </section>

    <div id="editContact"></div>

</div>







